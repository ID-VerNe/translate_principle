# LLM API 配置
LLM_API_KEY=your_api_key_here
LLM_API_URL=http://localhost:19183/v1/chat/completions
LLM_MODEL_NAME=openai/gpt-oss-20b

# 并发与性能控制
# 建议根据 API 的 Rate Limit 调整
MAX_CONCURRENT_REQUESTS=4
# 每分钟请求数限制 (RPM)，防止 429 错误。例如 OpenAI Tier 1 通常限制为 500 RPM，普通号可能只有 3 RPM。
RPM_LIMIT=60

# 容错与重试
# 遇到网络错误或解析失败时的最大重试次数
MAX_RETRIES=3
# 重试前的等待秒数
RETRY_DELAY=2.0

# 翻译参数 (可选覆盖)
# TEMP_TERMS=0.1
# TEMP_LITERAL=0.3
# TEMP_POLISH=0.5
